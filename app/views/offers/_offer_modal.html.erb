<div class="offer-modal" data-controller="modal" data-target="offers.modal">
    <div class="modal-content">
        <div class="offer-info">
            <h3 class="message">PRODUTO ADICIONADO AO CARRINHO</h3>
            <h4 class="product-name" data-target="modal.name"></h4>
            <%= image_tag '', class: "product-image", data: { target: "modal.photo" } %>
            <div class="modal-cart">
                <span class="items-cart">Tem <span class="item">1 item</span> em seu carrinho</span>
                <div class="subtotal">
                    Subtotal
                    <span class="price" data-target="modal.price">R$ 58.49</span>
                </div>
            </div>
            <div class="modal-buttons">
                <%= link_to "Continuar Compra", "", data: { target: "modal.store" } %>
                <%= link_to "Finalizar Pedido", cart_path %>
            </div>
        </div>
    </div>
</div>
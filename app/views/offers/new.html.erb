<h1>Offers#new</h1>
<p>Find me in app/views/offers/new.html.erb</p>

  <%= simple_form_for @offer do |f| %>
    <div id="offer_product_fields">
      <%= f.simple_fields_for :offer_products do |product| %>
        <%= render 'offer_product_fields', f: product, class: 'select2' %>
        <div class="links">
          <%= link_to_add_association 'Add', f, :offer_products %>
        </div>
      <% end %>
    </div>
    <%= f.input :store_id, collection: Store.where(owner_id: current_user), input_html: { class: 'select2'} %>
    <%= f.input :stock %>
    <%= f.input :price %>
    <%= f.input :active, checked: true %>
    <%= f.submit %>
  <% end %>


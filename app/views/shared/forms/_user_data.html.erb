<div class="form-box">
    <span class="form-info-toggler" data-offer="">
        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
        <i class="fa fa-check" aria-hidden="true"></i>
    </span>
    <h3 class="form-title">
    Dados Atuais
    </h3>
    <%= simple_form_for user, url: edit_profile_path, method: :patch do |f| %>
        <div class="user-names">
            <span class="form-label">Nome</span>
            <%= f.input :name, label: false %>
            <span class="form-label">Sobrenome</span>
            <%= f.input :last_name, label: false %>
        </div>
        <span class="form-label">Nascimento</span>
        <%= f.input :birthdate, label: false %>
        <%= f.submit %>
    <% end %>
</div>

